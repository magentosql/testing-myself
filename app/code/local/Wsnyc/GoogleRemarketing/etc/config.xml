<?xml version="1.0"?>
<config>
  <modules>
    <Wsnyc_GoogleRemarketing>
      <version>0.1.0</version>
    </Wsnyc_GoogleRemarketing>
  </modules>
  <global>
    <blocks>
      <remarketing>
        <class>Wsnyc_GoogleRemarketing_Block</class>
      </remarketing>
    </blocks>
    <helpers>
      <remarketing>
        <class>Wsnyc_GoogleRemarketing_Helper</class>
      </remarketing>
    </helpers>
    <models>
      <remarketing>
        <class>Wsnyc_GoogleRemarketing_Model</class>
      </remarketing>
    </models>
  </global>
  <frontend>
    <events>
      <checkout_onepage_controller_success_action>
        <observers>
          <remarketing_checkout_success>
            <type>singleton</type>
            <class>Wsnyc_GoogleRemarketing_Model_Observer</class>
            <method>saveLastOrderId</method>
          </remarketing_checkout_success>
        </observers>
      </checkout_onepage_controller_success_action>
    </events>
    <layout>
      <updates>
        <Wsnyc_GoogleRemarketing>
          <file>googleremarketing.xml</file>
        </Wsnyc_GoogleRemarketing>
      </updates>
    </layout>
  </frontend>
  <adminhtml>
    <acl>
      <resources>
        <admin>
          <children>
            <system>
              <children>
                <config>
                  <children>
                    <googleremarketing>
                      <title>Conversion</title>
                    </googleremarketing>
                  </children>
                </config>
              </children>
            </system>
          </children>
        </admin>
      </resources>
    </acl>
  </adminhtml>
</config>