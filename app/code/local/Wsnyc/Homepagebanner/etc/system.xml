<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>
        <wsnyc_homepagebanner translate="label">
            <label>Home Page Banner</label>
            <tab>wsnyc</tab>
            <frontend_type>text</frontend_type>
            <sort_order>110</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <slideSpeed translate="label comment">
                            <label>Slide Speed</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>This value should be in milliseconds</comment>
                        </slideSpeed>
                    </fields>
                    <fields>
                        <paginationSpeed translate="label comment">
                            <label>Pagination Speed</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>This value should be in milliseconds and it determines how long image stays on the front</comment>
                        </paginationSpeed>
                    </fields>
                    <fields>
                        <navigation translate="label comment">
                            <label>Navigation Arrows</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Determines control arrows visibility</comment>
                        </navigation>
                    </fields>
                </general>
            </groups>
        </wsnyc_homepagebanner>
    </sections>
</config>