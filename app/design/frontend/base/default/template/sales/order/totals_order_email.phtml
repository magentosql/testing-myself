<?php foreach ($this->getTotals() as $_code => $_total): ?>
    <?php if ($_total->getBlockName()): ?>
        <?php echo $this->getChildHtml($_total->getBlockName(), false); ?>
    <?php else:?>
	    <?php if ($_total === end($this->getTotals())): ?>
	    
	    <tr>
			<td style="padding-top:8px"><span style="font-family:Gill Sans, Gill Sans MT, Calibri, sans-serif;color:#222222;font-size:13px; font-weight:bold"><?php echo $this->escapeHtml($_total->getLabel());?></span></td>
			<td align="right" style="padding-right:3px;padding-top:12px"><span style="font-family:Gill Sans, Gill Sans MT, Calibri, sans-serif;color:#222222;font-size:13px; font-weight:bold"><?php echo $this->formatValue($_total) ?></span></td>
		</tr>
	    
	    <?php else: ?>
	    <tr>
			<td style="padding-bottom:4px"><span style="font-family:Gill Sans, Gill Sans MT, Calibri, sans-serif;color:#888888;font-size:13px; font-weight:bold"><?php echo $this->escapeHtml($_total->getLabel());?></span></td>
			<td align="right" style="padding-right:3px;padding-bottom:4px"><span style="font-family:Gill Sans, Gill Sans MT, Calibri, sans-serif;color:#888888;font-size:13px; font-weight:bold"><?php echo $this->formatValue($_total) ?></span></td>
		</tr>
		<?php endif?>
    <?php endif?>
